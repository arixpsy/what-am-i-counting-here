// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

enum ResetType {
  Day
  Week
  Month
  Year
  Never
}

enum ExternalPlatform {
  Github
}

model User {
  id                 Int              @id @default(autoincrement())
  externalPlatform   ExternalPlatform
  externalPlatformId String
  avatarUrl          String
  displayName        String
  clientToken        String           @default("")
  tokenExpiration    DateTime         @default(now())
  timezone           String           @default("Asia/Singapore")
  counter            Counter[]
  records            Record[]
  createdAt          DateTime         @default(now())
  updatedAt          DateTime         @updatedAt
}

model Counter {
  id        Int       @id @default(autoincrement())
  title     String
  resetType ResetType @default(Day)
  target    Int
  color     String
  increment Float
  record    Record[]
  user      User      @relation(fields: [userId], references: [id])
  userId    Int
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Record {
  id          Int      @id @default(autoincrement())
  counter     Counter  @relation(fields: [counterId], references: [id])
  counterId   Int
  increment   Float
  labels      Label[]
  description String
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Label {
  id        String   @id
  records   Record[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  lastUsed  DateTime @default(now())
}
